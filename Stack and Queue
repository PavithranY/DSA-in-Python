    nums = [1,3,-1,-3,5,3,6,7]
    print("Sliding Window Max (k=3):", sliding_window_max(nums, 3))

    grid = [[2,1,1],[1,1,0],[0,1,1]]
    print("Rotten Oranges Time:", oranges_rotting(grid))

