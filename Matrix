# âœ… 16. Unique Paths (DP)
def unique_paths(m, n):
    dp = [[1]*n for _ in range(m)]
    for r in range(1, m):
        for c in range(1, n):
            dp[r][c] = dp[r-1][c]+dp[r][c-1]
    return dp[-1][-1]
print(unique_paths(3, 3))  # â¡ï¸ 6

# âœ… 17. Minimum Path Sum (DP)
def min_path_sum(grid):
    rows, cols = len(grid), len(grid[0])
    for r in range(1, rows):
        grid[r][0] += grid[r-1][0]
    for c in range(1, cols):
        grid[0][c] += grid[0][c-1]
    for r in range(1, rows):
        for c in range(1, cols):
            grid[r][c] += min(grid[r-1][c], grid[r][c-1])
    return grid[-1][-1]
print(min_path_sum([[1,3,1],[1,5,1],[4,2,1]]))  # â¡ï¸ 7
