print("\nâœ… Inverted Right Triangle:"); inverted_right_triangle(5)
print("\nâœ… Pyramid:"); pyramid(5)
print("\nâœ… Inverted Pyramid:"); inverted_pyramid(5)
print("\nâœ… Diamond:"); diamond(5)
print("\nâœ… Number Pyramid:"); number_pyramid(5)
print("\nâœ… Floydâ€™s Triangle:"); floyds_triangle(5)
print("\nâœ… Pascalâ€™s Triangle:"); pascal_triangle(5)
print("\nâœ… Butterfly:"); butterfly(4)
print("\nâœ… Zig Zag:"); zig_zag(3,9)
print("\nâœ… Hollow Diamond:"); hollow_diamond(5)
